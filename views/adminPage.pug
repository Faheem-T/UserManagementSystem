extends layout

block content
  .d-flex.flex-column.align-items-center.justify-content-center.p-5
    h1 ADMIN PAGE
    h2 Welcome #{name}
    a(href="/logout") Log Out
    if users
      table.table.table-striped.table-hover
        thead  
          tr 
            th ID
            th Username
            th email
            th
            th
        for user in users
          tr
            td!=user.id
            td!=user.username
            td!=user.email
            td
              a(href=`editUser/${user.id}`) Edit
            td
              a(href=`deleteUser/${user.id}`) Delete
    
    else
      div The are no users...
    
    // import toast mixin
    include mixins/toast
    // mixin to render messages
    +toast(success, false)
    +toast(errors, true)

