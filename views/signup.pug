extends layout

block content
  div.container-fluid.d-flex.flex-column.align-items-center.justify-content-center#main
    h1 SIGN UP
    form.d-flex.flex-column(action="/signup", method="POST")
      div.md-3
        label.form-label(for="username") Username
        input.form-control#username(type="text", name="username", required)
      div.md-3      
        label.form-label(for="email") Email
        input.form-control#email(type="email", name="email", required)
      div.md-3
        label.form-label(for="password") Password
        input.form-control#password(type="password", name="password", required)

      div.form-check
        input.form-check-input#adminCheck(type="checkbox", value="admin", name="role")
        label.form-label(for="role") Admin?

      button.btn.btn-primary(type="submit", value="SignUp") Sign Up
      div.mt-3.text-center
        p Already registered? 
          a(href="/login") Login
  div.container-fluid.d-flex-flex-column.align-items-center.justify-content-center#sub
    if errors
      ul
        for error in errors
          li.alert.alert-danger!= error
